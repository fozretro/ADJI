cmd_jon: .proc
                .section cmd_jon_workspace
joystick_index: .fill 1
use_overlay: .fill 1
xvectors: .fill 2
                .endsection

                jsr must_be_valid_hw

                jsr parse_jno
                sta joystick_index

                lda #$80
                sta use_overlay

                jsr find_string_tail
                bcs got_mode

                and #$df
                cmp #'O'
                beq got_mode
                cmp #'X'
                beq dont_use_overlay

                ldx #errors_table.bad_mode
                jmp do_error

dont_use_overlay:
                asl use_overlay
got_mode:
                bit use_overlay
                bmi install_overlay

install_xvector:
                lda #$a8        ;read extended vector table address
                ldx #$00
                ldy #$ff
                jsr osbyte
                stx xvectors+0
                sty xvectors+1

                ldx #0          ;assume Electron
                jsr must_be_valid_hw
                bvc +
                ldx #2          ;Master 128
+

                php
                sei
                lda #$ff
                sta bytev+1
                ldy #(<bytev)/2*3
                sty bytev+0
                lda handle_osbyte_routines+0,x
                sta (xvectors),y
                iny
                lda handle_osbyte_routines+1,x
                sta (xvectors),y
                iny
                lda $f4
                sta (xvectors),y
                plp
                rts

handle_osbyte_routines:
                .word handle_osbyte_electron
                .word handle_osbyte_master
                
install_overlay:
                ldx #errors_table.todo_offset
                jmp do_error
                
                .endproc

;-------------------------------------------------------------------------
;
; 
handle_osbyte_routine: .macro machine_type
                sta os_a
                cmp #$80
                beq handle_osbyte_80
                jmp jmp_default_osbyte

handle_osbyte_80:
                cpx #3
                bcs jmp_default_osbyte

                .if \machine_type==machine_type_master
                .cpu '65c02'
                php
                sei
                lda acccon
                pha
                lda #acccon.ifj|acccon.y
                tsb acccon
                ldy $f4
                lda $df0,y
                sta os_y
                stz os_x
                ldy #State.jflags
                lda (os_x),y
                and #3
                tay
                lda joystick_fred_offsets,y
                tay
                lda $fc00,y
                sta os_a        ;joystick value
                pla
                sta acccon
                plp
                .cpu 'default'
                .elsif \machine_type==machine_type_electron
                lda elk_jflags
                and #3
                tay
                lda joystick_fred_offsets,y
                tay
                lda $fc00,y
                sta os_a        ;joystick value
                .else
                .cerror 'unknown machine type'
                .endif
                
                cpx #1
                beq osbyte_80_adval1
                cpx #2
                beq osbyte_80_adval2
                jmp osbyte_80_adval0
                
                .endmacro
                
;-------------------------------------------------------------------------
;
; Handle OSBYTEs
;
handle_osbyte_master:
                .handle_osbyte_routine machine_type_master

handle_osbyte_electron:
                .handle_osbyte_routine machine_type_electron

osbyte_80_adval0: .proc
                ldx #0
                lda os_a
                and #jfire_mask
                beq got_fire
                inx
got_fire:
                ldy #4          ;does this value matter?
                rts
                .endproc

osbyte_80_adval1: .proc
                ldx #jleft_mask
                ldy #jright_mask
                jmp osbyte_80_axis
                .endproc

osbyte_80_adval2: .proc
                ldx #jup_mask
                ldy #jdown_mask
                jmp osbyte_80_axis
                .endproc

osbyte_80_axis: .proc
                txa
                and os_a
                bne minus1
                tya
                and os_a
                bne plus1
zero:
                ldx #$00
                ldy #$80
                rts

minus1:
                ldx #$00
                ldy #$00
                rts

plus1:
                ldx #$ff
                ldy #$ff
                rts
                .endproc

;-------------------------------------------------------------------------
; 
; jmp_default_osbyte
;
jmp_default_osbyte:
                php
                sei
                pha
                sty os_y
                ldy #<bytev
                bne jmp_default_vector_routine

jmp_default_vector_routine:
                lda default_vectors_ptr+0
                sta os_a
                lda default_vectors_ptr+1
                sta os_x
                lda (os_a),y    ;get LSB of routine
                pha
                iny
                lda (os_a),y    ;get MSB of routine
                sta os_x        ;store MSB of routine
                pla             ;restore LSB of routine
                sta os_a        ;store LSB of routine
                ldy os_y        ;restore input Y
                pla             ;restore input A
                plp             ;restore input P
                jmp (os_a)      ;call routine
                
